extends templates/layout.pug

append script

append bodyblock
  div(class="chat")
    div(class="chat__sidebar")
    div(class="chat__main")
      div(id="messages" class="chat__messages")
      div(class="compose")
          form(class="message-from")
            input(name="chattext" placeholder = "Your message")
            button Send
          button(id="send-location") Send location

  script(id="message-template")
    div(class="message")
      p
        span(class="message__name") Some User Name
        span(class="message__meta") {{createdAt}}
      p {{chatMessage}} 
  script(id="location-template")
    div(class="message")
      p.
        #[a(href="{{link}}" target="_blank") My location!]

  script(src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/3.0.1/mustache.min.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.6.0/qs.min.js")
  script(src="/socket.io/socket.io.js")
  script(src="/js/chat.js")

